{
  "manifest_version": 2,
  "homepage_url": "http://autopagerize.net/",
  "content_scripts": [
    {
      "js": [
        "extension.js",
        "autopagerize.user.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "A browser Extension for auto loading paginated web pages. AutoPagerize use in many web site, and provide efficiently web browsing.",
  "name": "AutoPagerize",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "version": "0.3.5",
  "icons": {
     "16":  "icons/icon16.png",
     "32":  "icons/icon32.png",
     "48":  "icons/icon48.png",
     "128": "icons/icon128.png"
  },
  "page_action": {
    "default_title": "Autopagerize for Chrome",
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "default_locale": "en",
  "web_accessible_resources": [
    "error.html",
    "loading.html",
    "loading.gif"
  ]
}
